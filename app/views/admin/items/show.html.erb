<div clas="row">
  <div class="content-box-large">
    <h2><%= @item.name %></h2>
    <div class="item-price">
      <p>NT<%= number_to_currency(@item.price) %></p>
    </div>
    <div class="item-description">
      <p><%= @item.description %></p>
    </div>

    <!-- TODO 改旋轉木馬顯示方式 -->
    <% @item.photos.each do |photo| %>
      <div class="item-photos-list">
        <%= image_tag(photo.image.medium.url) if photo.present? %>
      </div>  
    <% end %>    
  </div>
</div>